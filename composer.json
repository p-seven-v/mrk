{
    "name": "p7v/mrk",
    "description": "Document with meta parser for PHP",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Plekhanov",
            "email": "alex@p7v.app"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "erusev/parsedown": "^1.7",
        "league/commonmark": "^1.0",
        "phpunit/phpunit": "^8.5.14",
        "symfony/yaml": "^4.3"
    },
    "suggest": {
        "ext-json": "Required for json metadata parsing",
        "league/commonmark": "Required for Commonmark markdown parsing",
        "erusev/parsedown": "Required for Parsedown markdown parsing",
        "symfony/yaml": "Required for Yaml metadata parsing"
    },
    "autoload": {
        "psr-4": {
            "P7v\\Mrk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "P7v\\Mrk\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
